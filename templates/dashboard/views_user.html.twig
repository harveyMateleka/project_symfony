{% extends 'base_app.html.twig' %}
{% block title %} Users{% endblock title %}
{% block content %}
<main id="main" class="main">
    <div class="pagetitle">
      <h1>Liste des Utilisateurs</h1>
    </div><!-- End Page Title -->

    <section class="section">
      <div class="row">
        <div class="col-lg-12">

          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Datatables</h5>

              <div class="row text-right">  
                <div class="col-12" >
                    <a class="btn btn-primary" href="{{path('app_register')}}" > CrÃ©er un nouveau utilisateur</a>
                  </div>
              </div></br></br> 
              <table class="table datatable">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Nom UTilisateur</th>
                        <th scope="col">Email</th>
                        <th scope="col">Adresse</th>
                        <th scope="col">Action</th>
                      </tr>
                 
                
                </thead>
                <tbody>
                    {% for ligne  in resultat %}
                        <tr>
                            <td>{{ligne.id}}</td>
                            <td>{{ligne.lastname}}</td>
                            <td>{{ligne.email}}</td>
                            <td>{{ligne.adresse}}</td>
                            <td>
                                <a class="btn btn-primary" href="{{path('app_edit.users',{id:ligne.id})}}" >Edit</a>
                                <a class="btn btn-danger" href="{{path('app_delete.users',{id:ligne.id})}}" > Delete</a>  
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
              </table>
              <!-- End Table with stripped rows -->

            </div>
          </div>

        </div>
      </div>
    </section>

  </main>
{% endblock content %}
